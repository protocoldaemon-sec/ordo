# Backend Configuration
ENVIRONMENT=development
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000

# Security
API_SECRET_KEY=your-secret-key-here-change-in-production
API_KEY_FRONTEND=your-frontend-api-key-here

# Database
DATABASE_URL=postgresql+asyncpg://ordo:ordo_password@localhost:5432/ordo_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Mistral AI
MISTRAL_API_KEY=your-mistral-api-key-here
MISTRAL_MODEL=mistral-large-latest
MISTRAL_EMBED_MODEL=mistral-embed

# Supabase (for RAG)
SUPABASE_URL=your-supabase-url-here
SUPABASE_KEY=your-supabase-anon-key-here

# Helius RPC
HELIUS_API_KEY=your-helius-api-key-here
HELIUS_RPC_URL=https://mainnet.helius-rpc.com

# Search API (Brave Search)
BRAVE_SEARCH_API_KEY=your-brave-search-api-key-here

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# CORS
CORS_ORIGINS=http://localhost:8081,exp://localhost:8081
CORS_ALLOW_CREDENTIALS=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# MCP Servers
MCP_EMAIL_URL=http://localhost:8001/mcp
MCP_SOCIAL_URL=http://localhost:8002/mcp
MCP_WALLET_URL=http://localhost:8003/mcp
MCP_DEFI_URL=http://localhost:8004/mcp
MCP_NFT_URL=http://localhost:8005/mcp
MCP_TRADING_URL=http://localhost:8006/mcp

# Audit Log
AUDIT_LOG_RETENTION_DAYS=90
