{
  "name": "ordo",
  "scripts": {
    "android": "expo run:android",
    "android:build": "expo prebuild -p android",
    "build": "tsc --noEmit && npm run android:build",
    "ci": "tsc --noEmit && npm run lint:check && npm run fmt:check && npm run android:build",
    "dev": "expo start",
    "doctor": "npx -y expo-doctor@latest",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "ios": "expo run:ios",
    "lint": "expo lint --fix",
    "lint:check": "expo lint",
    "reset-project": "node ./scripts/reset-project.js",
    "start": "expo start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "verify-setup": "node ./scripts/verify-setup.js",
    "web": "expo start --web"
  },
  "displayName": "Ordo",
  "description": "Privacy-first AI assistant for Solana Seeker with multi-surface access to Gmail, social media, and wallet functionality.",
  "usecase": "Mobile",
  "keywords": [
    "ordo",
    "ai-assistant",
    "solana",
    "seeker",
    "expo",
    "mobile-wallet-adapter",
    "react-native",
    "solana-web3js",
    "privacy-first",
    "gmail",
    "twitter",
    "telegram",
    "defi",
    "nft"
  ],
  "expo": {
    "doctor": {
      "reactNativeDirectoryCheck": {
        "exclude": [
          "react-native-snackbar"
        ],
        "listUnknownPackages": false
      }
    }
  },
