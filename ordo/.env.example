# Ordo Environment Variables

# Backend API Configuration
BACKEND_API_URL=http://localhost:8000
BACKEND_API_KEY=your-api-key-here

# Helius RPC Configuration
HELIUS_API_KEY=your-helius-api-key-here
HELIUS_RPC_URL=https://mainnet.helius-rpc.com/?api-key=

# Mistral AI Configuration
MISTRAL_API_KEY=your-mistral-api-key-here

# Google OAuth Configuration (Gmail Integration)
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# X/Twitter OAuth Configuration
X_CLIENT_ID=your-x-client-id-here
X_CLIENT_SECRET=your-x-client-secret-here

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# Brave Search API (Web Search)
BRAVE_SEARCH_API_KEY=your-brave-search-api-key-here

# Supabase Configuration (RAG System)
SUPABASE_URL=your-supabase-url-here
SUPABASE_KEY=your-supabase-anon-key-here

# App Configuration
APP_ENV=development
LOG_LEVEL=info

# Solana Configuration
SOLANA_CLUSTER=mainnet-beta
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Feature Flags
ENABLE_VOICE_INPUT=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_BIOMETRIC_AUTH=true
ENABLE_BACKGROUND_SYNC=true
