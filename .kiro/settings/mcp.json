{
  "mcpServers": {
    "ordo-email": {
      "command": "python",
      "args": [
        "-m",
        "uvicorn",
        "ordo_backend.mcp_servers.email:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8001"
      ],
      "cwd": "${workspaceFolder}/ordo-backend",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/ordo-backend",
        "GOOGLE_CLIENT_ID": "${env:GOOGLE_CLIENT_ID}",
        "GOOGLE_CLIENT_SECRET": "${env:GOOGLE_CLIENT_SECRET}"
      },
      "disabled": false,
      "autoApprove": [
        "search_email_threads",
        "get_email_content"
      ]
    },
    "ordo-social": {
      "command": "python",
      "args": [
        "-m",
        "uvicorn",
        "ordo_backend.mcp_servers.social:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8002"
      ],
      "cwd": "${workspaceFolder}/ordo-backend",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/ordo-backend",
        "X_API_KEY": "${env:X_API_KEY}",
        "X_API_SECRET": "${env:X_API_SECRET}",
        "TELEGRAM_BOT_TOKEN": "${env:TELEGRAM_BOT_TOKEN}"
      },
      "disabled": false,
      "autoApprove": [
        "get_x_dms",
        "get_x_mentions",
        "get_telegram_messages"
      ]
    },
    "ordo-wallet": {
      "command": "python",
      "args": [
        "-m",
        "uvicorn",
        "ordo_backend.mcp_servers.wallet:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8003"
      ],
      "cwd": "${workspaceFolder}/ordo-backend",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/ordo-backend",
        "HELIUS_API_KEY": "${env:HELIUS_API_KEY}",
        "SOLANA_RPC_URL": "https://mainnet.helius-rpc.com/?api-key=${env:HELIUS_API_KEY}"
      },
      "disabled": false,
      "autoApprove": [
        "get_wallet_portfolio",
        "get_token_balances",
        "get_transaction_history",
        "get_priority_fee_estimate"
      ]
    },
    "ordo-defi": {
      "command": "python",
      "args": [
        "-m",
        "uvicorn",
        "ordo_backend.mcp_servers.defi:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8004"
      ],
      "cwd": "${workspaceFolder}/ordo-backend",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/ordo-backend",
        "HELIUS_API_KEY": "${env:HELIUS_API_KEY}",
        "BIRDEYE_API_KEY": "${env:BIRDEYE_API_KEY}",
        "SOLANA_RPC_URL": "https://mainnet.helius-rpc.com/?api-key=${env:HELIUS_API_KEY}"
      },
      "disabled": false,
      "autoApprove": [
        "get_token_price_birdeye"
      ]
    },
    "ordo-nft": {
      "command": "python",
      "args": [
        "-m",
        "uvicorn",
        "ordo_backend.mcp_servers.nft:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8005"
      ],
      "cwd": "${workspaceFolder}/ordo-backend",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/ordo-backend",
        "HELIUS_API_KEY": "${env:HELIUS_API_KEY}",
        "SOLANA_RPC_URL": "https://mainnet.helius-rpc.com/?api-key=${env:HELIUS_API_KEY}"
      },
      "disabled": false,
      "autoApprove": [
        "get_nft_collection"
      ]
    },
    "ordo-trading": {
      "command": "python",
      "args": [
        "-m",
        "uvicorn",
        "ordo_backend.mcp_servers.trading:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8006"
      ],
      "cwd": "${workspaceFolder}/ordo-backend",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/ordo-backend",
        "HELIUS_API_KEY": "${env:HELIUS_API_KEY}",
        "BIRDEYE_API_KEY": "${env:BIRDEYE_API_KEY}",
        "SOLANA_RPC_URL": "https://mainnet.helius-rpc.com/?api-key=${env:HELIUS_API_KEY}"
      },
      "disabled": false,
      "autoApprove": [
        "get_market_analysis"
      ]
    }
  }
}
